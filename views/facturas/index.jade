block content
  h1 #{title}
  -if(factura)
    table(border='1')
      thead
        tr
          th Numero
          th Date
          th Origen
          th Destino
          th Deuda
          th Adquiriente
          th Puesto
          th &nbsp;
          th &nbsp;
          th &nbsp;
      tbody
        -each item in factura
          tr
            td #{item.num}
            td #{item.date}
            td #{item.origen}
            td #{item.destino}
            td #{item.debt}
            td #{item.adq}
            td #{item.puesto}
            td Ver
            td 
              a(href="/edit-factura/#{item._id}") Editar
            td
              form(method="post", action="/facturas/#{item._id}",enctype='application/x-www-form-urlencoded')
                input(type="hidden", name="_method", value="DELETE") 
                button(type='submit').
                  Eliminar
    p
      a(href="/nueva-factura") Nuevo Ticket
  -else
    p No existen facturas creadas
   
  
